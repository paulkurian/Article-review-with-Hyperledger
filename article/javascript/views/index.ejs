<body>
<div class="login-form">
<h1>Voter Interface</h1>
<p> Article url-Author-Publisher</p>

<ul> 
	<% obj.forEach(function(obj){ %>
	<li><p> <%=obj.Record.url%>- <%=obj.Record.author%> -<%=obj.Record.publisher%> <%=obj.Record.verdict%></p> </li>  
	<% }) %>
</ul>
<a href="/addarticle">Add new article</a>

<form action="vote" method="post">
	<p>Please enter url of the article you wish to vote on</p>
	<input type="text" name="url">

	Reliable:
	<input type="radio" name="reliability" value="reliable">
	Not Reliable:
	<input type="radio" name="reliability" value="Not">

	<input type="submit" name="vote">

	
</form>
</div>




